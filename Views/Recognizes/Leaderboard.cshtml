@model IEnumerable<Centric_FINAL.Models.Recognize>

@{
    ViewBag.Title = "Leaderboard";
}

<h2>Recognition Leaderboard</h2>

<table class="table">
    <tr>
        <th>
            Count of Recognitions
        </th>
        <th>
            Employee Full Name
        </th>
        <th>

        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="text-left">
            @{
                Centric_FINAL.DAL.Context db = new Centric_FINAL.DAL.Context();
                int employeeCnt = db.Recognize.Where(r => r.EmployeeID == item.EmployeeID).Distinct().Count();
                @employeeCnt
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Profile.EmployeeFullName)
        </td>
        
    </tr>
}

</table>
